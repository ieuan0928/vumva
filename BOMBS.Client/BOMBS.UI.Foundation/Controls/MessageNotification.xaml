<UserControl x:Class="BOMBS.UI.Foundation.Controls.MessageNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MinHeight="58">
    <Grid Background="#FFFFFBA2" Name="messageContainerGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />               
        </Grid.ColumnDefinitions>
        <Image Margin="7,2,3,5" Height="16" Width="16" Source="/BOMBS.UI.Foundation;component/Resources/exclamation.png" />
        <TextBlock Name="messageTextBox" Margin="0,2,7,5" Grid.Column="1"  VerticalAlignment="Center" Text="The quick brown fox jumps over the lazy dog near the riverbank." TextWrapping="Wrap" Foreground="#FFd46452" />
    </Grid>
</UserControl>
